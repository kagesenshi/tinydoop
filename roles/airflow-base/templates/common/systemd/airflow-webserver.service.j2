[Unit]
Description=Airflow Web
After=network.target


[Service]
Type=simple
EnvironmentFile=/etc/sysconfig/airflow
ExecStart=/opt/airflow/bin/airflow webserver
StandardOutput=syslog
StandardError=syslog
Restart=on-failure
RestartSec=5s
User={{ airflow_user }}
Group={{ airflow_group }} 


[Install]
WantedBy=multi-user.target

