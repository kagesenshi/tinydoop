#!/bin/bash

export JAVA_HOME=/usr/lib/jvm/java/
export HADOOP_HOME=/opt/hadoop/
export HADOOP_COMMON_HOME=$HADOOP_HOME
export HADOOP_MAPRED_HOME=$HADOOP_HOME
export HADOOP_HDFS_HOME=$HADOOP_HOME
export HADOOP_YARN_HOME=$HADOOP_HOME
export HADOOP_PID_DIR=/var/tmp/

if [ -z "$HADOOP_LOG_DIR" ]; then
    export HADOOP_LOG_DIR=/var/log/hadoop/
fi

if [ -z "$HADOOP_CONF_DIR" ]; then
    export HADOOP_CONF_DIR=$HADOOP_HOME/etc/hadoop/
fi
export YARN_HOME=$HADOOP_HOME
export PATH=$PATH:$HADOOP_HOME/bin
export HADOOP_CLASSPATH=$(hadoop classpath)
export HADOOP_CLASSPATH="$HADOOP_CLASSPATH:$HADOOP_HOME/share/hadoop/tools/lib/*.jar"
export HADOOP_CLASSPATH="$HADOOP_CLASSPATH:/usr/share/java/mysql-connector-java.jar"
export HADOOP_CLASSPATH="$HADOOP_CLASSPATH:/usr/share/java/postgresql-jdbc.jar"
export CLASSPATH="$CLASSPATH:$HADOOP_CLASSPATH"
