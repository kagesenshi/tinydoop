[Unit]
Description=Airflow scheduler
After=network.target mariadb.service
# Wants=namenode.service

[Service]
Type=simple
ExecStart=$AIRFLOW_HOME/bin/airflow scheduler
StandardOutput=$AIRFLOW_HOME/logs/airflow-scheduler.log
StandardError=$AIRFLOW_HOME/logs/airflow-scheduler.errors.log
Restart=on-failure
RestartSec=5s

[Install]
WantedBy=multi-user.target
